<UserControl x:Class="calendar.icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calendar"
             mc:Ignorable="d" Width="102" Height="90">
    <Grid Background="White" MouseDown="Cliked" Margin="0,0,4,0">
        <TextBlock x:Name="DayNumber" HorizontalAlignment="Left" Margin="20,10,0,0" TextWrapping="Wrap" Text="0" TextAlignment="Center"   VerticalAlignment="Top" Height="21" Width="50" FontSize="13"/>
        <Image Name="ImageSource" HorizontalAlignment="Left" Height="46" Margin="20,34,0,0" VerticalAlignment="Top" Width="52"/>
    </Grid>
</UserControl>
