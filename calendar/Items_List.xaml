        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calendar"
        mc:Ignorable="d"
        Title="Items_List" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="Box" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="79,39,48,145"/>
        <Button Content="Save and exit" HorizontalAlignment="Left" Margin="264,332,0,0" VerticalAlignment="Top" Width="303" Height="60" FontSize="30" Click="AddToList"/>

    </Grid>
</Window>
